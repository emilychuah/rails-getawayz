<h1 align="center"><%= @listing.title %></h1>

<% @listing.photos.each do |photo| %>
  <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
<% end %>

<div align="center">
  <p>Address: <%= @listing.address %></p>
  <p>Description: <%= @listing.description %></p>
  <p>Capacity: <%= @listing.listing_capacity %> guests</p>
  <p>Price per night: AUD <%= @listing.price_per_night %></p>
  <p>Owner: <%= @listing.user.name %></p>
  <%= link_to 'Book Now', new_listing_booking_path(@listing.id), class: 'btn btn-outline-secondary' %>
  <%= link_to "Go Back", listings_path(@listing), class: "btn btn-outline-secondary mx-2" %>
</div>
