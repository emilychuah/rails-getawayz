<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.05),rgba(0,0,0,0.1)), url(https://images.unsplash.com/photo-1516455590571-18256e5bb9ff?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80);">
  <div class="container d-flex justify-content-center">
    <h1>Book your Next Getaway</h1>
  </div>
  <div class="container d-flex justify-content-center">
    <p>Indulge Yourself Now</p>
  </div>
</div>

<div class="section p-5">
  <div class="d-flex justify-content-center mb-3">
    <h3 class="pb-2">Available stays</h3>
  </div>
  <div class="row px-5 mx-5">
    <% @listings.each do |listing| %>
      <div class="col-12 col-sm-6 col-md-4 mb-3">
        <%= link_to listing_path(listing), class:"text-decoration-none" do %>
         <div class="card-trip">
          <% listing.photos.each do |photo| %>
            <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
          <% end %>
            <div class="card-trip-infos">
              <div>
                <h2><%= listing.title %></h2>
                <p><%= listing.address %></p>
              </div>
              <h2 class="card-trip-pricing">A$<%= listing.price_per_night %></h2>
              <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
            </div>
        </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<div style="width: 100%; height: 600px;"
  data-controller="mapbox"
  data-mapbox-markers-value="<%= @markers.to_json %>"
  data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
