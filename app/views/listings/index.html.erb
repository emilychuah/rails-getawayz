<%# BANNER %>
<div class="banner mt-0" style="background-image: linear-gradient(rgba(0,0,0,0.05),rgba(0,0,0,0.1)), url(https://images.unsplash.com/photo-1516455590571-18256e5bb9ff?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80);">

  <div class="container d-flex justify-content-center">
    <h1>Book your Next Getaway</h1>
  </div>
  <div class="container d-flex justify-content-center">
    <p>and indulge yourself now</p>
  </div>
</div>

<div class="section p-5">
  <div class="d-flex justify-content-center mb-3">
    <h3 class="pb-2">Available stays</h3>
  </div>
  <div class="row px-5 mx-5">
    <% @listings.each do |listing| %>
      <div class="col-12 col-sm-6 col-md-4 mb-3">
        <%= link_to listing_path(listing), class:"text-decoration-none" do %>
         <div class="card-trip">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
              <ol class="carousel-indicators">
                  <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                  <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                  <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
              </ol>
              <div class="carousel-inner">
                  <div class="carousel-item active">
                      <img class="d-block w-100" src="https://images.unsplash.com/photo-1551524164-687a55dd1126?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1025&q=80" width="400" height="210" alt="First slide">
                  </div>
                  <div class="carousel-item">
                      <img class="d-block w-100" src="https://images.unsplash.com/photo-1475503572774-15a45e5d60b9?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80" width="400" height="210" alt="Second slide">
                  </div>
                  <div class="carousel-item">
                      <img class="d-block w-100" src="https://images.unsplash.com/photo-1606586243150-88fde4c6f193?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80" width="100" height="210" alt="Third slide">
                  </div>
              </div>
              <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="sr-only">Next</span>
              </a>
          </div>
            <div class="card-trip-infos">
              <div>
                <h2><%= listing.title %></h2>
                <p><%= listing.address %></p>
              </div>
              <h2 class="card-trip-pricing">AUD $<%= listing.price_per_night %></h2>
              <%# <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" /> %>
            </div>
        </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<div class="d-flex justify-content-center">
<div style="width: 90%; height: 600px;"
  data-controller="mapbox"
  data-mapbox-markers-value="<%= @markers.to_json %>"
  data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
