<h3 class="text-center py-2">My bookings</h3>
<div class="d-flex align-items-top justify-content-center flex-wrap pl-0" id="booking-index">
  <% @bookings.each do |booking| %>
    <div class="card-product m-4">
      <div class="card" style="width: 18rem; height: 400px">
        <div class="card-body">
          <h5 class="card-title"><%= booking.listing.title %></h5>
          <p class="card-text">Number of people: <%= booking.number_of_people %></p>
          <p>Total price: AUD <%= booking.total_price %></p>
          <p>Check-in date: <%= booking.check_in_date_utc %></p>
          <p>Check-out date: <%= booking.check_out_date_utc %></p>
          <p>Booked by: <%= booking.user.name %></p>
          <div class="d-flex justify-content-center">
            <button type="button" class="btn btn-outline-secondary mx-2"><%= link_to 'visit this booking', booking_path(booking),class: 'link' %></button>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class="m-3 d-flex justify-content-center" >
  <%= link_to "Back to Home", listings_path(@bookings), class: "btn btn-primary btn-lg " %>
</div>
